<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>Document</title>
</head>
<body>
    <header>
        <%- include('../partials/header') %>
    </header>
    <a href='/meals/<%= meal.id %>'>Back to Meal</a>
    <!-- <button onclick="history.back()">Go Back</button> -->
    <main>
        <div>
            <h1>
                <% if (food.description != null ){ %>
                <div><%= food.description %></div> 
                <% } %>
                
            </h1>
            <div><%= food.amountInGrams %> grams</div>
        </div>

        <h5>Nutrient Totals</h5>
        <div class="nutrient-list-header flex-container">
            <div>
                <form action="/nutrients/sort" method="POST">
                    <input type="hidden" name="mealId" id="mealId" value="<%= meal.id %>">
                    <input type="hidden" name="sortBy" id="sortBy" value="name">
                    <input type="hidden" name="direction" id="direction" value="<%= direction %>">
                    <input type="hidden" name="pathName" id="pathName" value="meals/showFood">
                    <input type="hidden" name="foodId" id="foodId" value="<%= food.id %>">
        
                    <button type="submit" class="button-sort">Name</button>
                </form>
            </div>
            <div>
                <form action="/nutrients/sort" method="POST">
                    <input type="hidden" name="mealId" id="mealId" value="<%= meal.id %>">
                    <input type="hidden" name="sortBy" id="sortBy" value="amount">
                    <input type="hidden" name="direction" id="direction" value="<%= direction %>">
                    <input type="hidden" name="pathName" id="pathName" value="meals/showFood">
                    <input type="hidden" name="foodId" id="foodId" value="<%= food.id %>">

                    <button type="submit" class="button-sort">Amount</button>
                </form>
            </div>
            <!-- <div>Daily Value (%)</div> -->
            <div>
                <form action="/nutrients/sort" method="POST">
                    <input type="hidden" name="mealId" id="mealId" value="<%= meal.id %>">
                    <input type="hidden" name="sortBy" id="sortBy" value="percentOfDV">
                    <input type="hidden" name="direction" id="direction" value="<%= direction %>">
                    <input type="hidden" name="pathName" id="pathName" value="meals/showFood">
                    <input type="hidden" name="foodId" id="foodId" value="<%= food.id %>">
                    
                    <button type="submit" class="button-sort">Daily Value(%)</button>
                </form>
            </div>
        </div>
        <% food.foodNutrients.forEach(nutrient => { %>
            <div class="nutrient-total-row flex-container">
                <div><%= nutrient.name %></div>
                <div><%= nutrient.amount %> <%= nutrient.unitName %></div>
                <div><%= nutrient.percentOfDV %></div>
            </div>
        <% }) %>
    </main>
</body>
</html>